<% if flash[:alert] %>
  <div class="alert alert-danger rounded-0 alert-dismissible fade show" role="alert">
    <p class="col text-center text-danger">
      <%= flash[:alert] %>
    </p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

