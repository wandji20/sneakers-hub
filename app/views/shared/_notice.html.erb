<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
    <p class="col text-center text-success">
      <%= flash[:notice] %>
    </p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
