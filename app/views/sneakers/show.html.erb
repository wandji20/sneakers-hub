<section class="container-fluid text-capitalize">
  <nav class="my-3" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0 text-center d-flex justify-content-center">
      <li class="breadcrumb-item">
        <%= link_to 'Home', root_path, class: "text-decoration-none text-black-50" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to 'Sneakers', sneakers_path, class: "text-decoration-none text-black-50" %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <%= @sneaker.id %>
      </li>
    </ol>
  </nav>
  <article class="d-flex flex-column secondary-bg">
    <div>
      <%= image_tag @sneaker.image_url, alt: @sneaker.title, class: "img-fluid" %>
    </div>
    <div class="px-2 py-3">
      <h6 class=""><%= @sneaker.title %></h6>
      <p class="d-flex flex-column">
        <span class="inline-block">$<%= @sneaker.price %></span>
      </p>
       <p>
        <span>Brand:</span>
        <span class="inline-block"><%= @sneaker.brand.name %></span>
      </p>
       <p>
        <span>Gender:</span>
        <span class="inline-block"><%= @sneaker.gender.name %></span>
      </p>
      <p>
        <span>Release Date:</span>
        <span class="inline-block"><%= @sneaker.release_date.strftime('%a %d %b %Y') %></span>
      </p>
    </div>
    <div class="d-flex flex-column bg-white pt-2">
      <button class="btn bg-dark text-light my-1" data-bs-toggle="modal" data-bs-target="#shopping-cart">
        <span>Add to Cart</span>
        <span><i class="bi bi-plus"></i></span>
      </button>
      <button class="btn bg-black text-light my-1">
        Buy it Now
      </button>
    </div>
  </article>

</section>

<%# shopping cart modal %>
<div class="modal fade" id="shopping-cart" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Shopping Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row pb-2 border-bottom">
            <div class="col-4 p-0">
              <%= image_tag @sneaker.image_url, class: "img-fluid" %>
            </div>
            <div class="col-8 d-flex flex-column">
              <span class="align-self-end"><i class="bi bi-trash"></i></span>
              <span class="align-self-end"><%= @sneaker.name %></span>
            </div>
            <div class="col-4 d-flex mt-1 p-0">
              <span class="border col-4 p-0 text-center">
                <i class="bi bi-dash"></i>
              </span>
              <span class="border-top border-bottom bg-light col-4 p-0 text-center">1</span>
              <span class="border col-4 p-0 text-center">
                <i class="bi bi-plus"></i>
              </span>
            </div>
            <div class="col-8 text-end mt-1">
              $<%= @sneaker.price %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark w-100" data-bs-dismiss="modal">
          <span>Check Out</span>
          <span><i class="bi bi-chevron-right"></i></span>
        </button>
        <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">
          Continue Shopping
        </button>
      </div>
    </div>
  </div>
</div>
