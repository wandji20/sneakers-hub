<%= turbo_stream.update('notice') do %>
  <%= render partial: 'shared/notice' %>
<% end %>
<%= turbo_stream.update('alert') do %>
  <%= render partial: 'shared/alert' %>
<% end %>
<%= turbo_stream.update(@order_item) do %>
  <%= render partial: 'order_item', locals: { order_item: @order_item } %>
<% end %>
<%= turbo_stream.update('total_price') do %>
  <%= render partial: 'order_items/total_order_price', locals: { total: @shopping_cart_items.sum(:sub_total) } %>
<% end %>
